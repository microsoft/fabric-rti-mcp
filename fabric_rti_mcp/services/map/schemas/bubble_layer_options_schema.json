{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Bubble Layer Options",
  "description": "Configuration options for bubble layer visualization (point data). This object should be JSON.stringify'd and stored in layerSettings[].options as a string.",
  "type": "object",
  "properties": {
    "color": {
      "type": "string",
      "description": "Base color of bubbles (hex color or expression)",
      "default": "#1A73AA",
      "examples": ["#1A73AA", "#FF5733"]
    },
    "type": {
      "type": "string",
      "enum": ["vector", "raster"],
      "description": "Layer type",
      "default": "vector"
    },
    "visible": {
      "type": "boolean",
      "description": "Whether the layer is visible",
      "default": true
    },
    "pointLayerType": {
      "type": "string",
      "enum": ["bubble", "heatmap"],
      "description": "Type of point visualization",
      "default": "bubble"
    },
    "enablePopups": {
      "type": "boolean",
      "description": "Whether to show popups on click",
      "default": true
    },
    "minZoom": {
      "type": "number",
      "description": "Minimum zoom level to render the layer (inclusive)",
      "minimum": 1,
      "maximum": 23,
      "default": 1
    },
    "maxZoom": {
      "type": "number",
      "description": "Maximum zoom level to render the layer (exclusive)",
      "minimum": 1,
      "maximum": 23,
      "default": 23
    },
    "bubbleOptions": {
      "type": "object",
      "description": "Bubble-specific visualization options",
      "properties": {
        "opacity": {
          "type": "number",
          "description": "Opacity of the bubble fill (0-1)",
          "minimum": 0,
          "maximum": 1,
          "default": 1,
          "examples": [1, 0.8, 0.5]
        },
        "strokeWidth": {
          "type": "number",
          "description": "Width of the bubble stroke in pixels",
          "minimum": 0,
          "maximum": 10,
          "default": 1,
          "examples": [1, 2, 3]
        },
        "strokeColor": {
          "type": "string",
          "description": "Color of the bubble stroke (hex color)",
          "default": "white",
          "examples": ["white", "#000000", "#FFFFFF"]
        },
        "sizeType": {
          "type": "string",
          "enum": ["fixed", "data-driven"],
          "description": "How bubble size is determined. 'fixed' uses fixedSize, 'data-driven' uses sizeProperty with square root scaling",
          "default": "fixed"
        },
        "fixedSize": {
          "type": "number",
          "description": "Fixed radius for all bubbles in pixels (used when sizeType='fixed')",
          "minimum": 1,
          "maximum": 50,
          "default": 8,
          "examples": [8, 12, 20]
        },
        "sizeProperty": {
          "type": "string",
          "description": "Data property name to use for bubble size (used when sizeType='data-driven'). Values are scaled using square root mapping from min/max data values to 1-50px radius",
          "examples": ["population", "revenue", "count"]
        },
        "clusterRadius": {
          "type": "number",
          "description": "Radius of each cluster in pixels (when clustering is enabled on the source)",
          "default": 50,
          "examples": [50, 80, 100]
        },
        "enableSeriesGroup": {
          "type": "boolean",
          "description": "Whether to color bubbles by a categorical property",
          "default": false
        },
        "seriesGroup": {
          "type": "string",
          "description": "Property name to use for series grouping/coloring",
          "examples": ["category", "status", "type"]
        },
        "color": {
          "description": "Color expression for series grouping (set automatically when enableSeriesGroup is true)",
          "oneOf": [
            {
              "type": "string",
              "description": "Simple hex color"
            },
            {
              "type": "array",
              "description": "MapLibre expression for data-driven coloring",
              "examples": [
                ["match", ["get", "category"], "A", "#FF0000", "B", "#00FF00", "#CCCCCC"]
              ]
            }
          ]
        }
      }
    },
    "tooltipKeys": {
      "type": "array",
      "description": "Array of property names to show in tooltips",
      "items": {
        "type": "string"
      },
      "examples": [["name", "population", "area"]]
    },
    "dataLabelKeys": {
      "type": "array",
      "description": "Array of property names to display as labels on the map",
      "items": {
        "type": "string"
      },
      "examples": [["name", "code"]]
    },
    "dataLabelOptions": {
      "type": "object",
      "description": "Styling options for data labels",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "color": {
          "type": "string",
          "default": "#000000"
        },
        "size": {
          "type": "number",
          "default": 12
        },
        "textStrokeColor": {
          "type": "string",
          "default": "#ffffff"
        },
        "textStrokeWidth": {
          "type": "number",
          "default": 1
        },
        "allowOverlap": {
          "type": "boolean",
          "default": false
        }
      }
    }
  },
  "examples": [
    {
      "comment": "Simple bubble layer with fixed size",
      "color": "#1A73AA",
      "type": "vector",
      "visible": true,
      "pointLayerType": "bubble",
      "enablePopups": true,
      "bubbleOptions": {
        "opacity": 0.8,
        "strokeWidth": 2,
        "strokeColor": "white",
        "sizeType": "fixed",
        "fixedSize": 12
      }
    },
    {
      "comment": "Data-driven bubble size based on population",
      "color": "#FF5733",
      "type": "vector",
      "visible": true,
      "pointLayerType": "bubble",
      "enablePopups": true,
      "bubbleOptions": {
        "opacity": 0.7,
        "strokeWidth": 1,
        "strokeColor": "#333333",
        "sizeType": "data-driven",
        "sizeProperty": "population"
      },
      "tooltipKeys": ["name", "population", "area"]
    },
    {
      "comment": "Series grouped bubbles by category",
      "color": "#CCCCCC",
      "type": "vector",
      "visible": true,
      "pointLayerType": "bubble",
      "enablePopups": true,
      "bubbleOptions": {
        "opacity": 0.9,
        "strokeWidth": 1,
        "strokeColor": "white",
        "sizeType": "fixed",
        "fixedSize": 10,
        "enableSeriesGroup": true,
        "seriesGroup": "category",
        "color": ["match", ["get", "category"], "retail", "#FF6B6B", "office", "#4ECDC4", "industrial", "#FFE66D", "#CCCCCC"]
      }
    }
  ]
}
